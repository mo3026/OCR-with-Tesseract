<Window x:Class="Text_Extractor.Snap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Text_Extractor"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True" WindowState="Maximized" Background="Transparent" MouseDown="Window_MouseDown" MouseMove="Window_MouseMove">
    <Grid>
        <Canvas Background="#01000000" x:Name="cnv">
            <Rectangle x:Name="rect" StrokeDashArray="2" Stroke="#99000000"  />
        </Canvas>
    </Grid>
</Window>
